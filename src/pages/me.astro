---
import Layout from "../components/Layout.astro";
import Icon from "../components/Icon.astro";
import { Picture } from "@astrojs/image/components";
import headshot from "../images/headshot.jpg";
---

<Layout
  tags={{
    title: "About | Chris LaRocque",
    description:
      "Chris LaRocque is a web developer from Boston, MA. He specializes in tactical agile development aimed at delivering user-centric software at scale and at speed.",
    ogInfo: {
      title: "About",
      subtitle: "About me, Chris LaRocque, and how to get in touch.",
    },
  }}
>
  <main>
    <section class="justify-center gap-7 lg:flex">
      <div class="text-wrapper content flex items-center justify-center">
        <div class="text py-7 lg:px-0">
          <h1 class="">About me</h1>
          <div class="my-7 flex max-w-[50%] justify-between lg:max-w-[20%]">
            <a
              href="https://twitter.com/TophLaRoph"
              aria-label="My Twitter/X profile"
            >
              <Icon icon="x" />
            </a>
            <a
              href="https://github.com/ChrisLaRocque"
              aria-label="My GitHub profile"
            >
              <Icon icon="github" />
            </a>
            <a
              href="https://www.linkedin.com/in/larocquechristopher/"
              aria-label="My LinkedIn profile"
            >
              <Icon icon="linkedin" />
            </a>
          </div>
          <p class="lg:max-w-[70ch]">
            I'm a full-stack web developer building responsive, user-first
            websites. I started working in tech at Spartan Race, followed by
            Brightcove. From there I made my way to Gatsby as a Senior Solutions
            Engineer, and then eventually to Netlify via aquisition. Currently I
            work at <a href="https://sanity.io/">Sanity.io</a> with an awesome team
            of talented folks, helping build a product I love!
            <br /><br />
            I consider myself fortunate to be able to hear how so many different
            teams solve the problems presented by the modern web. I get to do as
            my fellow Netlifolker <a href="https://www.chrishannaby.com/"
              >Chris Hannaby</a
            > says and bring all these best-in-class practices not only into my own
            work but to the customers of Netlify/Gatsby in an effort to 'uplevel
            everyone'.
            <br /><br />
            Outside of slinging the future of web tech I am usually (honestly) checking
            out whats new in web tooling, watching old NFL Films docs, and chilling
            with my partner Becca and our insufferable bulldog, Alby.
          </p>
        </div>
      </div>
      <Picture
        src={headshot}
        widths={[200, 400, 600]}
        sizes="(max-width: 600px) 100vw, 600px"
        alt="Chris LaRocque headshot"
        aspectRatio="1:1"
        class="rounded-full"
        loading={"eager"}
        width={600}
        height={600}
      />
    </section>
    <section>
      <h3 class="">Commits to public GitHub repos</h3>
      <div class="flex items-center justify-center">
        <div id="contributions" class="flex gap-1"></div>
      </div>
    </section>
  </main>
</Layout>
<script>
  async function getContributions(token, username) {
    const headers = {
      Authorization: `bearer ${token}`,
    };
    const body = {
      query: `query {
            user(login: "${username}") {
              name
              contributionsCollection {
                contributionCalendar {
                  colors
                  totalContributions
                  weeks {
                    contributionDays {
                      color
                      contributionCount
                      date
                      weekday
                    }
                    firstDay
                  }
                }
              }
            }
          }`,
    };
    const response = await fetch("https://api.github.com/graphql", {
      method: "POST",
      body: JSON.stringify(body),
      headers: headers,
    });
    const data = await response.json();
    return data;
  }

  const { data } = await getContributions(
    import.meta.env.PUBLIC_GITHUB_TOKEN,
    "ChrisLaRocque"
  );
  const contributions = document.getElementById("contributions");

  if (!data || !data.user) {
    const oops = document.createElement("p");
    oops.innerText = "Oops, couldn't load commits from GitHub";
    contributions?.appendChild(oops);
    throw "Error fetching from Github";
  }
  const {
    user: {
      contributionsCollection: { contributionCalendar },
    },
  } = data;
  const { weeks } = contributionCalendar;
  const insertAtIndex = (
    parent: HTMLDivElement,
    child: HTMLDivElement,
    i: number
  ) => {
    if (i >= parent.children.length) {
      parent.appendChild(child);
    } else {
      parent.insertBefore(child, parent.children[i]);
    }
  };
  weeks.forEach(({ contributionDays, firstDay }, i) => {
    const weekDiv = document.createElement("div");
    weekDiv.setAttribute("id", `week-${i}`);
    weekDiv.setAttribute(
      "class",
      `flex-col gap-1 ${i > 30 ? "hidden lg:flex" : "flex"}`
    );
    weekDiv.setAttribute("title", firstDay);
    contributionDays.forEach(({ color, date }, i) => {
      const bgColor = color === "#ebedf0" ? "rgba(235,	237,	240, 0.15)" : color; // Make white squares a more pleasing gray
      const dayDiv = document.createElement("div");
      dayDiv.setAttribute("id", date);
      dayDiv.setAttribute("class", `lg:w-5 lg:h-5 w-2 h-2`);
      dayDiv.setAttribute("style", `background-color: ${bgColor}`);
      dayDiv.setAttribute("title", date);
      insertAtIndex(weekDiv, dayDiv, i);
    });
    insertAtIndex(contributions, weekDiv, i);
  });
</script>
